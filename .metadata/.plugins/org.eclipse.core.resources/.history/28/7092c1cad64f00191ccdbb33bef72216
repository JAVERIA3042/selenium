
public class functionBasic1 {

	public static void main(String[] args) {
		//Declare variable
		int a, b, c, d;
		
		//Initialize variable
		
		a = 10;
		b = 20;
		c = 30;
		
		d = a + b;
		System.out.println("Varibale a is " + a);
		System.out.println("Variable b is " + b);
		System.out.println("Variable c is " + c);
		System.out.println("Variable d is " + d);
		
		if(a==b) {
			System.out.println("They are the same");
		}
		else {
			System.out.println("They are the different");
		}
	}

}
